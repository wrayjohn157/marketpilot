# gpt_eval_api.py
from fastapi import APIRouter, Request, HTTPException
from openai import OpenAI
import json
from pathlib import Path

router = APIRouter(prefix="/gpt")

# === Load OpenAI key from paper_cred.json ===
CRED_PATH = Path("/home/signal/market7/config/paper_cred.json")
try:
    with open(CRED_PATH) as f:
        creds = json.load(f)
        api_key = creds.get("OPENAI_API_KEY")
        client = OpenAI(api_key=api_key)
        print("[‚úÖ] OpenAI key loaded.")
except Exception as e:
    client = None
    print(f"[ERROR] Failed to load OPENAI_API_KEY: {e}")

@router.post("/ask")
async def ask_gpt(req: Request):
    data = await req.json()
    prompt = data.get("prompt")

    if not prompt:
        raise HTTPException(status_code=400, detail="Missing prompt")
    if client is None:
        raise HTTPException(status_code=500, detail="OpenAI API client not initialized")

    print(f"[üì©] Prompt received: {prompt[:60]}...")

    try:
        response = client.chat.completions.create(
            model="gpt-4-turbo",
            messages=[
                {"role": "system", "content": "You are an expert crypto trade assistant focused on DCA recovery, fork trades, and trade scoring logic."},
                {"role": "user", "content": prompt}
            ],
            max_tokens=400,
            temperature=0.4,
        )
        reply = response.choices[0].message.content.strip()
        print("[‚úÖ] GPT reply:", reply[:80], "...")
        return {"reply": reply}
    except Exception as e:
        import traceback
        print("[‚ùå GPT ERROR]", traceback.format_exc())
        raise HTTPException(status_code=500, detail=f"OpenAI Error: {str(e)}")
