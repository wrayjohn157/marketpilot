# Market7 Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=market7
POSTGRES_USER=market7
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# InfluxDB Configuration
INFLUX_HOST=localhost
INFLUX_PORT=8086
INFLUX_TOKEN=your_influx_token_here
INFLUX_ORG=market7
INFLUX_BUCKET=trading_data

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=60
API_RETRY_ATTEMPTS=3

# Trading Configuration
MAX_POSITIONS=10
MAX_DAILY_LOSS=1000
MAX_DAILY_TRADES=50
DEFAULT_LEVERAGE=1.0

# ML Configuration
ML_MODEL_UPDATE_INTERVAL=3600
ML_PREDICTION_CACHE_TTL=300
ML_TRAINING_SCHEDULE="0 2 * * *"

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin
SENTRY_DSN=

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External APIs
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
THREE_COMMAS_API_KEY=your_3commas_api_key
THREE_COMMAS_SECRET_KEY=your_3commas_secret_key
OPENAI_API_KEY=your_openai_api_key

# Notification
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=

# Logging
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Performance
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_MEMORY_USAGE=80%
MAX_CPU_USAGE=80%

# Backup
BACKUP_SCHEDULE="0 1 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=