              value={params.score_decay_min}
              onChange={(v) => updateParam("score_decay_min", v)}
            />
            <SwitchField
              label="Require Indicator Health"
              checked={params.require_indicator_health}
              onChange={(v) => updateParam("require_indicator_health", v)}
