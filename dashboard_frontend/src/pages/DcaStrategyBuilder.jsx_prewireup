  const updateNestedParam = (section, key, value) => {
    setParams((prev) => ({
      ...prev,
      [section]: {
        ...prev[section],
        [key]: value,
      },
    }));
  };

  const updateArrayParam = (section, index, value) => {
    setParams(prev => {
      const arr = Array.isArray(prev[section]) ? [...prev[section]] : [];
      arr[index] = value;
      return { ...prev, [section]: arr };
    });
