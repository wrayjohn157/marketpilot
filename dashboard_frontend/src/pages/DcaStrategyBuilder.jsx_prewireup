      min_confidence: 0.75,
      min_recovery_odds: 0.8,
      min_safu_score: 0.7,
      min_health_score: 0.6,
      min_drawdown_pct: 2,
      min_confidence_delta: 0.05,
      min_tp1_shift_pct: 2,
