# DCA configuration for 3Commas-style signal logic

max_trade_usdt: 100  # Maximum total USDT per trade
base_order_usdt: 15
safety_order_usdt: 15
max_safety_orders: 4
price_deviation_trigger_pct: 1.5  # % drop from previous entry required to allow another SO

# Multiplier logic for each step (used if smart DCA is enabled)
so_multipliers:
  - 1.0
  - 1.5
  - 2.0
  - 2.5

# Optional toggles
require_indicator_health: true
indicator_thresholds:
  rsi: 45
  macd_histogram: 0.0
  adx: 20
